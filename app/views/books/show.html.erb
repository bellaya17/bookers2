<div class="container px-5 px-sm-0">
    <div class="row">
            <%= render 'books/error', model: @book %>
        <div class="col-md-3">
            <%= render 'users/user', user: @user %>
            <%= render 'books/book', book: @new_book %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
            
            <tbody>
            <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
            <%= link_to @user.name, user_path(@user) %></td>
            <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>

            <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
              <% end %>

            </tr>
            </tbody>

            </table>
        </div>
    </div>
</div>
