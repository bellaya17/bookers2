
<h2 class="mt-3">New book</h2>

  <%= form_with model:@book, local:true do |f| %>

    <div class="form-title row">
      <label>Title</label>
      <%= f.text_field :title, class: "col-xs-12" %>
      <!--<input class="form-control book-title" type="text" name="book[title]" id="book_title">-->
    </div>

    <div class="form-body row">
      <label>Opinion</label>
      <%= f.text_area :body, class: "col-xs-12" %>
      <!--<textarea class="form-control book_body" type="text" name="book[body]" id="book_body"></textarea>-->
    </div>

    <div class="actions row">
      <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
      <!--<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"></input>-->
    </div>

  <% end %>




